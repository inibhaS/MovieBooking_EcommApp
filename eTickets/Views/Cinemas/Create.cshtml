@model Cinema
@{ ViewData["Title"] = "Add a new Cinema";}
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
</head>
<div class="row-text">
    <div class="col-md-8 offset-2">
        <p>
            <h2>Add a new Cinema</h2>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width:150px" id="CinemaLogoPreview" />


                    </div>
                    <div class="form-group">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>
@section Scripts{
    <script>
    $(document).ready(function (){
        var result = document.getElementById('CinemaLogoPreview');
        result.src = $("#Logo").val();


    })

    $("#Logo").on("change", function ()
    {
        var result = document.getElementById('CinemaLogoPreview');
        result.src = $(this).val();

    })
    </script>

}